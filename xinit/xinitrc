#!/bin/sh
while true; do
    dwmbar
    sleep 10s
done &
#source /etc/X11/xinit/xinitrc.d/50-systemd-user.sh
xrdb -merge ~/.Xresources &
xset r rate 200 20
xinput --set-prop "Razer Razer DeathAdder" "libinput Accel Speed" -0.9

RANDOM_WALLPAPER="$(ls -d1 ~/.wallpaper/*.jpg ~/.wallpaper/*.png | shuf -n1)"
RESOLUTION="$(xdpyinfo | grep dimensions | sed -r 's/^[^0-9]*([0-9]+x[0-9]+).*$/\1/')"
rm /tmp/tempwall.jpg
convert "$RANDOM_WALLPAPER" \
  -gravity center \
  -resize "$RESOLUTION^" \
  -crop "$RESOLUTION+0+0" \
  +repage \
  /tmp/tempwall.jpg
bgs /tmp/tempwall.jpg

export _JAVA_AWT_WM_NONREPARENTING=1
redshift &
exec dwm
